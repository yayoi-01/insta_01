
<% provide(:title, 'Edit user') %>
<% provide(:button_text, '編集内容を保存') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="https://gravatar.com/emails" target="_blank">画像変更</a>
      
    </div>
    <%= link_to "アカウント削除", @user, method: :delete,
                                  data: { confirm: "本当に消してもいいですか?" } %> 
  </div>
</div>